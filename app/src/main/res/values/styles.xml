<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#536DFE</item>
        <item name="colorPrimaryDark">#00008B</item>
        <item name="colorAccent">#536DFE</item>
    </style>

    <style name="quesStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="checkboxStyle" parent="AlertDialog.AppCompat.Light">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonStyle" parent="AlertDialog.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
